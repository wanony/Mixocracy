@page "/"
@inject NavigationManager Navigation

<PageTitle>Mixocracy</PageTitle>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-lg-8">
            <div class="py-5">
                <h1 class="display-4 fw-bold mb-4">Welcome to Mixocracy</h1>
                <p class="lead mb-4">
                    The collaborative playlist platform where music meets democracy. 
                    Create playlists with friends, vote on songs, and discover new music together.
                </p>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="/login" class="btn btn-primary btn-lg px-4 me-md-2">Get Started</a>
                    <a href="/dashboard" class="btn btn-outline-secondary btn-lg px-4">View Dashboard</a>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-6 text-primary mb-3">🎵</div>
                            <h5>Collaborative Playlists</h5>
                            <p class="text-muted">Create shared playlists where everyone can contribute their favorite songs.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-6 text-primary mb-3">🗳️</div>
                            <h5>Democratic Voting</h5>
                            <p class="text-muted">Vote on songs to decide what makes it to the final playlist. Every voice matters!</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-6 text-primary mb-3">🎶</div>
                            <h5>Multi-Platform</h5>
                            <p class="text-muted">Support for Spotify, Apple Music, YouTube, and more. Sync across platforms seamlessly.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        // Auto-redirect to dashboard for demo purposes
        // In a real app, you'd check authentication status first
    }
}